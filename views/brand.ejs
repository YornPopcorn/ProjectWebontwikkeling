<%- include('partials/navbar') %>

<h1><%= brand.brandName %></h1>
<p>
    Founded: <%= brand.yearFounded %> in <%= brand.country %>
    <% if (brand.website) { %>
        | <a href="<%= brand.website %>" target="_blank">Website</a>
    <% } %>
</p>

<h2>Guitars (<%= guitars.length %>)</h2>
<% if (guitars.length > 0) { %>
    <ul>
        <% guitars.forEach(guitar => { %>
            <li>
                <a href="/guitar/<%= guitar.id %>"><%= guitar.name %></a>
                <% if (guitar.brand && guitar.brand.id !== brand.id) { %>
                    <span>(Note: Brand ID mismatch - showing by name)</span>
                <% } %>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>No guitars found for this brand.</p>
<% } %>

